@model PCE_Web.Controllers.RegistrationController.InputModel
@{
    ViewData["Title"] = "Registracija";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/styleForRegistration.css">

</head>
<body>
    
    <form asp-action="Register" novalidate>
        <div class="container">
            <h1>Registracija</h1>
            <p>Užpildykite šią formą, norėdami sukurti vartotoją</p>
            <hr>

            <div class="form-group">
                <label asp-for="Email"><b>El. paštas</b></label>
                <input asp-for="Email" class="form-control" type="email" placeholder="Įveskite el. paštą"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"><b>Slaptažodis</b></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Įveskite slaptažodį" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"><b>Pakartokite slaptažodį</b></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Pakartokite slaptažodį" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

           <hr>
            <p>Sukurdami vartotoją Jūs sutinkate su mūsų <a asp-controller="Home" asp-action="Privacy">privatumo politika</a>.</p>

            <button type="submit" class="registerbtn" asp-action="SignUp">Registruotis</button>
        </div>

        <div class="container signin">
            <p>Jau turite vartotoją? <a asp-controller="Logging" asp-action="Login">Prisijunkite</a>.</p>
        </div>
    </form>

</body>
</html>