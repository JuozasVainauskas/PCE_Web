@{
    ViewData["Title"] = "Email patvirtinimas";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/styleForRegistration.css">

</head>
<body>

<form asp-action="EmailConfirmation" novalidate>
    <div class="container">
        <h1>Prisijungimas</h1>
        <p>Užpildykite šią formą, norėdami prisijungti</p>
        <hr>

        <div class="form-group">
            <label asp-for="Email"><b>El. paštas</b></label>
            <input asp-for="Email" class="form-control" type="email" placeholder="Įveskite el. paštą"/>
        </div>

        <button type="submit" class="registerbtn">Patvirtinti</button>
    </div>
</form>
</body>
</html>